<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/lviv_img" />

    <Button
        android:id="@+id/showWeather"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:text="@string/show_weather" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showWeather">

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:background="#88ffffff"
            android:padding="4dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Description: " />

        <TextView
            android:id="@+id/temperature_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:background="#88ffffff"
            android:padding="4dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Temperature min:" />

        <TextView
            android:id="@+id/temperature_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature_min"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:background="#88ffffff"
            android:padding="4dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Temperature max:" />

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/temperature_max"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:background="#88ffffff"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/weather_icon1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/weather_icon"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:layout_toLeftOf="@+id/weather_icon"
            android:background="#88ffffff"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/weather_icon2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/weather_icon"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:background="#88ffffff"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/weather_icon3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/weather_icon"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:layout_toRightOf="@+id/weather_icon2"
            android:background="#88ffffff"
            android:contentDescription="@null" />

    </RelativeLayout>

</RelativeLayout>
